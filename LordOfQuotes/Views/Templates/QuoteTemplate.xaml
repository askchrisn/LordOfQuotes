<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="LordOfQuotes.Views.Templates.QuoteTemplate">
    <ContentView.Content>

        <StackLayout BackgroundColor="LightBlue" Orientation="Horizontal" Padding="10" HeightRequest="60" >
            <Label Text="{Binding Dialog}" VerticalOptions="CenterAndExpand"></Label>
            <Button Text="Read" Clicked="RemoveQuoteClicked" BackgroundColor="Green" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"></Button>
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer 
                    NumberOfTapsRequired="1"
                    Tapped="GoToQuoteClicked">
                </TapGestureRecognizer>
            </StackLayout.GestureRecognizers>
        </StackLayout>

    </ContentView.Content>
</ContentView>
